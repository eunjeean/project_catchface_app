<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyReportActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rd1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pointOrange"
                    android:checked="true"
                    android:enabled="false"
                    android:text="범죄유형"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wantedTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="범죄유형이 작성됩니다."
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pointOrange"
                    android:checked="true"
                    android:enabled="false"
                    android:text="인적사항"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="left"
                    android:text="이름"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="이름"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="left"
                    android:text="핸드폰번호"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="핸드폰번호"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pointOrange"
                    android:checked="true"
                    android:enabled="false"
                    android:text="신고내용"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reportGetTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:hint="신고시 작성한 신고내용이 작성됩니다."
                    android:padding="4dp"
                    android:textColor="@color/mainNavy"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rd9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pointOrange"
                    android:checked="true"
                    android:enabled="false"
                    android:text="신고발생위치"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reportGetAdrTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:hint="신고시 작성한 발생위치가 작성됩니다."
                    android:padding="4dp"
                    android:textColor="@color/mainNavy"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rd7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pointOrange"
                    android:checked="true"
                    android:enabled="false"
                    android:text="몽타주 상세내용"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wantedcontentTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="예시 ) 눈썹이 얇고 눈이 길게 찢어져있다. 입술이 얇고 얼굴이 조금 길고 앞머리가 짧다."
                    android:padding="4dp"
                    android:textColor="@color/mainNavy"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/monResultImg"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/text_border" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>