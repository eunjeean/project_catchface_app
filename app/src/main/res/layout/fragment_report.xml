<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reportFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentReport">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topCl"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/mainNavy"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_mainh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/noticeImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/icon_notice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/userImg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_user"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topCl">

        <LinearLayout
            android:id="@+id/mainLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Step1 몽타주 제작 -->
            <LinearLayout
                android:id="@+id/step1Ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/noticeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="목격한 인물에 대한 상세내용을 작성해주세요"
                    android:textColor="@color/pointOrange"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/monMakeEt"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:background="@drawable/btn_sub_border"
                    android:gravity="center"
                    android:hint="( 예시 )\n눈썹이 얇고 눈이 길게 찢어져있다. 입술이 얇고 얼굴이 조금 길고 앞머리가 짧다."
                    android:padding="4dp" />

                <ImageButton
                    android:id="@+id/voiceBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:padding="4dp"
                    app:srcCompat="@drawable/icon_voice" />

            </LinearLayout>

            <Button
                android:id="@+id/step1Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="@color/mainNavy"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Step1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- step2 몽타주 제작 및 선택-->

            <LinearLayout
                android:id="@+id/step2Ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/monMakeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="목격한 인물과 비슷한 몽타주를 선택해주세요"
                    android:textColor="@color/pointOrange"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/btn_sub_border"
                    android:orientation="vertical"
                    android:weightSum="3"
                    app:layout_constraintBottom_toTopOf="@+id/makeBtn">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/monMake1Img"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:padding="8dp"
                            app:srcCompat="@drawable/icon_drawing" />

                        <ImageView
                            android:id="@+id/monMake2Img"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:backgroundTint="@color/white"
                            app:srcCompat="@drawable/icon_drawing" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/monMake3Img"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:backgroundTint="@color/white"
                            app:srcCompat="@drawable/icon_drawing" />

                        <ImageView
                            android:id="@+id/monMake4Img"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:backgroundTint="@color/white"
                            app:srcCompat="@drawable/icon_drawing" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/monMakeResultTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="몽타주 결과"
                        android:textColor="@color/mainNavy"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/step2Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="@color/mainNavy"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Step2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Step3 수배자 리스트 선택 -->

            <LinearLayout
                android:id="@+id/step3Ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/wantedImg"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    app:srcCompat="@drawable/text_border" />

                <TextView
                    android:id="@+id/exText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="목격한 용의자와 비슷한 수배자를 4개의 이미지중 선택해주세요"
                    android:textColor="@color/mainNavy"
                    android:textSize="15sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wantedListRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />

            </LinearLayout>

            <Button
                android:id="@+id/step3Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="@color/mainNavy"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Step3"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Step4 신고내용작성 -->

            <LinearLayout
                android:id="@+id/step4Ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/warning1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/subGray"
                    android:padding="4dp"
                    android:text="@string/warring1"
                    android:textColor="@color/pointOrange"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/warning2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/subGray"
                    android:padding="4dp"
                    android:text="@string/warring2"
                    android:textColor="@color/pointOrange"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rd1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/btnGray"
                        android:enabled="false"
                        android:text="범죄유형"
                        android:textColor="@color/mainNavy"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/wantedSpin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:entries="@array/wanted_Spinner"
                        android:gravity="center" />

                </LinearLayout>

                <RadioButton
                    android:id="@+id/rd2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/btnGray"
                    android:enabled="false"
                    android:text="신고내용"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/reportConEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:hint="최소 5자, 최대 180자 작성 가능"
                    android:inputType="textPersonName"
                    android:maxLength="180"
                    android:minHeight="48dp"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/rd3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/btnGray"
                        android:enabled="false"
                        android:text="사건발생일자"
                        android:textColor="@color/mainNavy"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dateTv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="2022.10.00"
                        android:visibility="gone" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <DatePicker
                    android:id="@+id/repDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/rd4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/btnGray"
                        android:enabled="false"
                        android:text="사건발생시간"
                        android:textColor="@color/mainNavy"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/timeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="2022.10.00"
                        android:visibility="gone" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TimePicker
                    android:id="@+id/repTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:timePickerMode="spinner" />

                    <RadioButton
                        android:id="@+id/rd5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/btnGray"
                        android:enabled="false"
                        android:text="신고발생위치"
                        android:textColor="@color/mainNavy"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/repAdrET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="예시 )광주광역시 광주CGI센터"
                        android:textSize="16sp"
                        android:textColor="@color/mainNavy"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        />

            </LinearLayout>

            <Button
                android:id="@+id/step4Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="@color/mainNavy"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Step4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Step5 확인 및 동의 -->

            <LinearLayout
                android:id="@+id/step5Ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rd6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pointOrange"
                    android:checked="true"
                    android:enabled="false"
                    android:text="인적사항"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/nameLl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="이름"
                        android:textColor="@color/mainNavy"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="이름"
                        android:textColor="@color/mainNavy"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/phoneLl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phoneText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="핸드폰번호"
                        android:textColor="@color/mainNavy"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phoneTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="핸드폰번호"
                        android:textColor="@color/mainNavy"
                        android:textSize="16sp" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/rd8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pointOrange"
                    android:checked="true"
                    android:enabled="false"
                    android:text="신고내용"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reportGetTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="신고시 작성한 신고내용이 작성됩니다."
                    android:padding="4dp"
                    android:textColor="@color/mainNavy"
                    android:layout_marginLeft="4dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rd9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pointOrange"
                    android:checked="true"
                    android:enabled="false"
                    android:text="신고발생위치"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reportGetAdrTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="신고시 작성한 발생위치가 작성됩니다."
                    android:padding="4dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/mainNavy"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rd7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pointOrange"
                    android:checked="true"
                    android:enabled="false"
                    android:text="몽타주 상세내용"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wantedcontentTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="예시 ) 눈썹이 얇고 눈이 길게 찢어져있다. 입술이 얇고 얼굴이 조금 길고 앞머리가 짧다."
                    android:padding="4dp"
                    android:textColor="@color/mainNavy"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/monResultImg"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:padding="4dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/text_border" />

                    <ImageView
                        android:id="@+id/wantResultImg"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:padding="4dp"
                        android:visibility="visible"
                        tools:srcCompat="@tools:sample/avatars" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/wantedCk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="신고내용 공유 동의"
                        android:textSize="14dp"
                        app:buttonTint="@color/pointOrange" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/wantedviewBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_sub_border"
                        android:text="내용보기"
                        android:textStyle="bold"
                        app:cornerRadius="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/infoCk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="개인정보 수집 동의"
                        android:textSize="14dp"
                        app:buttonTint="@color/pointOrange" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/infoViewBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_sub_border"
                        android:text="내용보기"
                        android:textStyle="bold"
                        app:cornerRadius="10dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@color/subGray"
                    android:gravity="center"
                    android:text="작성이 완료되었으면 제출하기 버튼을 눌러주세요😊"
                    android:textColor="@color/mainNavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/submitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/pointOrange"
                    android:text="제출"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
