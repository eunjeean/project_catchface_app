<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FersonaApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainNavy</item>
        <item name="colorPrimaryVariant">@color/mainNavy</item>
        <item name="colorOnPrimary">@color/subGray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pointOrange</item>
        <item name="colorSecondaryVariant">@color/subGray</item>
        <item name="colorOnSecondary">@color/mainNavy</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- 타이틀바 없애기 -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FersonaApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FersonaApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FersonaApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>